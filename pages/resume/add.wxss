@import "../common/lib/weui.wxss";

.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}

.bank {
  position: relative;
  overflow: hidden;
  height: 100rpx;
  background-color: #fff;
  margin-top: 15rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  text-indent: 10rpx;
}

.bank .whatbank-logo {
  width: 70rpx;
  height: 70rpx;
  float: left;
  margin: 15rpx;
}

.right {
  height: 30rpx;
  width: 30rpx;
  transform: translate(-50%, -50%) rotate(45deg);
  border: 1px solid #cbcbcb;
  border-left: none;
  border-bottom: none;
  position: absolute;
  top: 50%;
  right: 20rpx;
}

.bank .whatbank {
  color: #333;
  display: inline-block;
  width: 70%;
}

.bank .banknumber {
  display: inline-block;
}

.max {
  overflow: hidden;
  height: 68rpx;
  line-height: 68rpx;
  color: #999;
  background-color: #f4f4f4;
  font-size:16px;
}

.howmuch {
  overflow: hidden;
  position: relative;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  color: #333;
  text-indent: 16rpx;
  border-bottom: 1px;
  font-size:14px;
}

.howmuch1{
  overflow: hidden;
  position: relative;
  background-color: #fff;
  color: #333;
  width: 100%;
  font-size: 30rpx;
  border-bottom: 1px;
}

.howmuch1 textarea{
  font-size: 20rpx;
  border-bottom: 1px;
}

.howmuch .ipt {
  height: 100rpx;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding-left: 100rpx;
  z-index: 1;
  margin-left:9%;
}

.next {
  width: 80%;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 36rpx;
  color: #b9b9b9 !important;
  background-color: #dadada !important;
  border: none;
  margin: 10rpx auto;
  padding: 0;
  text-align: center;
  position: inherit;
}

.red {
  color: #fff !important;
  background-color: #ff6146 !important;
}
