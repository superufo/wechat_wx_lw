.container {
    background-color: #F2f2f2;
    flex-direction: column;
    flex: column;
    align-content: center;
    align-items: center;
}

.topic_item {
  font-size: 12px;
  display:flex;
  flex-direction:row;
}

.topic_view_text{
  display:flex;
  flex-direction:column;
  align-content: center;
}

.title_text{
  font-size: 14px;
  font-weight: 700;
  padding-top: 40rpx;
  align-content: center;
}

.time_text{
  font-size: 10px;
  margin-top:5px;
  padding-bottom: 20rpx;
}

.rich{
    display: inline-block;
    flex-wrap:warp;
    font-weight: bold;
    font-size: 12px;
    margin: 15px 10px 10px 12px;
}

.comment{
   margin-top:10px;
   font-size: 12px;  
}

.comment_label{
  font-weight: bold;
  font-size: 15px;
}

.next {
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  font-size: 36rpx;
  color: #b9b9b9 !important;
  background-color: #dadada !important;
  border: 10px;
  margin-top: 15rpx;
  margin-bottom: 30rpx;
  padding: 0;
  text-align: center;
  position: inherit;
}

.red {
  color: #fff !important;
  background-color: #ff6146 !important;
}

.page-head-title{
  display: inline-block;
  padding: 0 40rpx 20rpx 40rpx;
  font-size: 32rpx;
  color: #BEBEBE;
}
.page-head-line{
  margin: 0 auto;
  width:-150rpx;
  height: 2rpx;
  background-color: #ddd333;
}
